@model EditUserRoleVM


<div class="container mt-4">
    <h2>Edit Role for @Model.UserName</h2>
    <form asp-action="EditRole" method="post">
        <input type="hidden" asp-for="UserId" />
        <div class="form-group mb-3">
            <label>Select Role</label>
            <select asp-for="SelectedRole" class="form-control">
                <option value="">-- Select Role --</option>
                @foreach (var role in Model.AllRoles)
                {
                    <option value="@role" selected="@(Model.CurrentRoles.Contains(role))">@role</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
