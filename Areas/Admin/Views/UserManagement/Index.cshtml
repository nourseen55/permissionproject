@using Infrastructure.ViewModels
@model List<UserWithRoleVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container mt-4">
    <h2>Users & Roles</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td>
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="EditRole" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                            Edit Role
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p class="text-muted">
        Want to see all your roles? <a asp-area="Admin" asp-controller="Roles" asp-action="Index">Click here</a>
    </p>

</div>
